<article
  class="group relative flex flex-col gap-6 py-10 transition-colors md:flex-row md:gap-10 md:py-12"
>
  {
    post.data.cover && (
      <a
        href={`/blog/${slug}`}
        class="w-full shrink-0 overflow-hidden rounded-sm bg-secondary md:w-56"
      >
        <Image
          src={post.data.cover}
          alt={post.data.title}
          class="aspect-4/3 h-full w-full object-cover transition-transform duration-700 ease-out group-hover:scale-105"
        />
      </a>
    )
  }

  <div class="flex min-w-0 flex-1 flex-col justify-between">
    <div>
      <div
        class="mb-3 flex items-center gap-3 font-mono text-xs tracking-widest text-muted-foreground/80 uppercase"
      >
        {
          post.data.category && (
            <>
              <span class="font-medium text-brand">{post.data.category}</span>
              <span class="text-muted-foreground/50">/</span>
            </>
          )
        }
        <time
          class="text-muted-foreground"
          datetime={post.data.createdAt.toISOString()}
        >
          {formatDate(post.data.createdAt)}
        </time>
      </div>

      <h3
        class="mb-3 font-serif text-2xl leading-tight font-medium text-foreground transition-colors group-hover:text-accent-foreground/70 md:text-3xl"
      >
        <a href={`/blog/${slug}`} class="focus:outline-none">
          {post.data.title}
        </a>
      </h3>

      {
        post.data.summary && (
          <p class="mb-4 line-clamp-2 text-base leading-relaxed font-light text-muted-foreground md:mb-5 md:line-clamp-3 md:w-11/12">
            {post.data.summary}
          </p>
        )
      }
    </div>

    {
      post.data.tags && post.data.tags.length > 0 && (
        <div class="relative z-10 mt-auto flex flex-wrap gap-2 pt-1">
          {post.data.tags.map((tag) => (
            <a
              href={`/tags/${tag}`}
              class="relative z-10 font-mono text-[11px] text-zinc-400 transition-colors hover:text-brand"
            >
              #{tag}
            </a>
          ))}

          {/* 可扩展数据位：例如阅读时间 (可选) */}
          {/* <span class="ml-auto text-xs font-mono text-zinc-300 self-center">5 min read</span> */}
        </div>
      )
    }
  </div>
</article>

---
export interface Props {
  class?: string;
  size?: "sm" | "md" | "lg" | "xl" | "full";
  padding?: "none" | "sm" | "md" | "lg" | "xl";
}

const { class: className = "", size = "md", padding = "md" } = Astro.props;

const sizeMap = {
  sm: "max-w-3xl", // 768px
  md: "max-w-5xl", // 1024px (default)
  lg: "max-w-7xl", // 1280px
  xl: "max-w-[1440px]", // 1440px
  full: "max-w-full", // 100%
};

const paddingMap = {
  none: "px-0",
  sm: "px-2 sm:px-4 lg:px-6",
  md: "px-4 sm:px-6 lg:px-8",
  lg: "px-8 sm:px-10 lg:px-12",
  xl: "px-8 sm:px-10 lg:px-12",
};
---

<div class:list={["mx-auto w-full", sizeMap[size], paddingMap[padding], className]}>
  <slot />
</div>

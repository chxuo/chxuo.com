---
export interface Props {
  href?: string;
  clickable?: boolean;
  padding?: "none" | "sm" | "md" | "lg";
  class?: string;
}

const { href, clickable = false, padding = "md", class: className = "" } = Astro.props;

const paddingClass = {
  none: "",
  sm: "p-4",
  md: "p-6",
  lg: "p-8",
};

const Element = href ? "a" : "div";
const elementProps = href ? { href } : {};
---

<Element
  class:list={[
    "rounded-lg border border-border bg-card text-card-foreground shadow-sm",
    paddingClass[padding],
    href || clickable ? "cursor-pointer transition-all hover:border-primary/20 hover:shadow-md" : "",
    className,
  ]}
  {...elementProps}
>
  <slot />
</Element>

---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Image } from "astro:assets";
import { getCollection } from "astro:content";

const friends = await getCollection("friends");
---

<BaseLayout>
  <div class="mx-auto md:max-w-3xl">
    <section id="blog" class="py-24 md:py-32">
      <div
        class="mb-8 flex flex-col justify-between gap-4 border-b border-zinc-100 pb-6 md:flex-row md:items-end dark:border-zinc-800"
      >
        <div>
          <h2
            class="mb-2 font-serif text-3xl font-medium text-zinc-900 md:text-4xl dark:text-zinc-50"
          >
            朋友们
          </h2>
          <p class="font-sans font-light text-zinc-500 dark:text-zinc-400">
            海内存知己，天涯若比邻
          </p>
        </div>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2">
        {
          friends.map((friend) => (
            <a href={friend.data.link} class="group flex gap-3">
              <Image
                class="rounded-full border border-border bg-primary p-1"
                src={friend.data.avatar}
                width={50}
                height={50}
                alt={friend.data.name}
              />
              <div>
                <h3 class="text-lg font-medium group-hover:text-brand">
                  {friend.data.name}
                </h3>
                <p class="text-sm text-muted-foreground">
                  {friend.data.description}
                </p>
              </div>
            </a>
          ))
        }
      </div>
    </section>
  </div>
</BaseLayout>
